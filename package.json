{
  "name": "goodauldbooks-nextjs",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "16.x"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format:check": "prettier --check src/",
    "format:fix": "prettier --write src/",
    "import:project-gutenberg:rsync": "rsync -av --progress --exclude-from=./src/bin/import/pg-rsync-excludes.txt ftp@ftp.ibiblio.org::gutenberg-epub ~/gutenberg-epub",
    "prisma:import:project-gutenberg:format": "prisma format --schema=./src/domain/import/project-gutenberg/import-db-schema.prisma",
    "prisma:import:project-gutenberg:prisma-init": "pnpm prisma:import:project-gutenberg:generate && pnpm prisma:import:project-gutenberg:migrate:reset",
    "prisma:import:project-gutenberg:generate": "prisma generate --schema=./src/domain/import/project-gutenberg/import-db-schema.prisma",
    "prisma:import:project-gutenberg:migrate:migrate": "prisma migrate dev --schema=./src/domain/import/project-gutenberg/import-db-schema.prisma",
    "prisma:import:project-gutenberg:migrate:reset": "prisma migrate diff --to-empty --from-schema-datamodel=./src/domain/import/project-gutenberg/import-db-schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "^3.14.0",
    "@types/xmldom": "^0.1.31",
    "fast-glob": "^3.2.11",
    "next": "12.1.6",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "typescript": "4.7.2",
    "xmldom": "^0.6.0",
    "xpath": "^0.0.32"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "@types/node": "17.0.33",
    "@types/react": "18.0.9",
    "@types/react-dom": "18.0.4",
    "eslint": "8.15.0",
    "eslint-config-next": "12.1.6",
    "prettier": "^2.6.2",
    "prisma": "^3.14.0",
    "ts-node": "^10.8.0"
  }
}
