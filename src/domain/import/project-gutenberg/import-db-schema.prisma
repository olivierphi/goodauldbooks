datasource db {
  provider = "sqlite"
  url      = "file:../../../../db/project-gutenberg-import.db"
}

generator client {
  provider = "prisma-client-js"
  output   = "./prisma-client"
}

model RawBook {
  pgBookId   Int      @id
  rdfContent String
  assets     String // actually a JSON field, but not supported by Prisma yet for SQLite
  hasIntro   Boolean
  intro      String?
  hasCover   Boolean
  createdAt  DateTime @default(now())
}
