datasource db {
  provider = "sqlite"
  url      = "file:../../../../db/project-gutenberg-import.db"
}

generator client {
  provider = "prisma-client-js"
  output   = "./prisma-client"
}

model RawBook {
  @@map("raw_book")

  pgBookId   Int      @map("pg_book_id") @id
  rdfContent String   @map("rdf_content")
  assets     String // actually a JSON field, but not supported by Prisma yet for SQLite :-/
  hasIntro   Boolean  @map("has_intro")
  intro      String?
  hasCover   Boolean @map("has_cover")
  createdAt  DateTime @map("created_at") @default(now())
}
